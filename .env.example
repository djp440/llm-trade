# 交易所配置
EXCHANGE_ID=bitget
IS_SANDBOX=true  # true=使用模拟盘API, false=使用实盘API

# 实盘账户 (Live Account)
PROD_API_KEY=your_prod_api_key_here
PROD_API_SECRET=your_prod_api_secret_here
PROD_API_PASSWORD=your_prod_api_password_here

# 模拟账户 (Demo/Sandbox Account)
DEMO_API_KEY=your_demo_api_key_here
DEMO_API_SECRET=your_demo_api_secret_here
DEMO_API_PASSWORD=your_demo_api_password_here

# LLM 配置
LLM_PROVIDER=deepseek
LLM_API_KEY=sk-your_llm_api_key_here
LLM_BASE_URL=https://api.deepseek.com/v1
LLM_MODEL=deepseek-chat

# 图像识别 LLM 配置（可选）
# 启用后，会在主流程中将K线图发送给图像识别LLM，返回文本会注入后续分析LLM的Prompt
VISION_LLM_ENABLED=false
# 如果不填写 VISION_LLM_API_KEY / VISION_LLM_BASE_URL，则默认复用 LLM_API_KEY / LLM_BASE_URL
VISION_LLM_API_KEY=
VISION_LLM_BASE_URL=
VISION_LLM_MODEL=
VISION_LLM_TEMPERATURE=
VISION_LLM_TOP_P=
VISION_LLM_MAX_TOKENS=
