# 复制这份文件，重名名为config.toml
# identity_role
# - daytrader: 日内交易专家，侧重高胜率或 1:2 盈亏比（默认）。
# - scalper:   剥头皮专家，持仓 1-6 根 K 线，止损极窄，极高胜率要求。
# - swing:     波段交易专家，持仓 8-80 根 K 线，允许宽止损，追求多段波幅。
# - trend:     趋势交易专家，持仓 30-300 根 K 线，低胜率高盈亏比，只抓大行情。
[llm]
log_interactions = true # 是否记录LLM交互日志
temperature = 0 # 0.0-2.0，越低越稳定
top_p = 1.0 # 0.0-1.0，建议与 temperature 二选一调整
max_tokens = 4000 # 单次回复最大 token 数，留空则使用服务端默认
reasoning_effort = "medium" # ignore|none|low|medium|high；ignore 表示不随请求发送该字段
identity_role = "daytrader"
[strategy]
max_open_positions = 3 # 最大同时持仓币种数
risk_per_trade = 1.0 # 单笔风险（百分比制）。例如 1 表示 1%

# Multi-Timeframe Configuration
[strategy.timeframes.trading]
interval = "5m"
limit = 30
include_features = true

[strategy.timeframes.context]
interval = "1h"
limit = 15
include_features = false

[strategy.timeframes.trend]
interval = "4h"
limit = 10
include_features = false


[symbols]
# 启用的交易对列表
active = [
  "ETH/USDT:USDT",
]

[execution]
commission_rate_percent = 0.06 # 单边佣金费率（百分比制）。例如 0.04 表示 0.04%
entry_offset_ticks = 1 # 突破单价格偏移 tick 数
min_notional = 5.0 # 最小交易名义价值 (USDT)
slippage_tolerance = 0.1 # 滑点容忍度（百分比制）。例如 0.1 表示 0.1%
